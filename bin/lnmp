#!/bin/zsh
echo "stop nginx & php-fpm & memcached & redis-server";
sudo pkill php-fpm memcached redis-server
pgrep nginx > /dev/null && sudo nginx -s stop

if [[ $1 = 'stop' ]];then
	exit;
fi

echo "start php-fpm daemon"
sudo php-fpm -D

echo "start nginx"
[[ -d /usr/local/var/run/nginx/ ]] || sudo mkdir /usr/local/var/run/nginx/
[[ -d /tmp/nginx ]] || mkdir /tmp/nginx
sudo nginx 

# mc
echo "start memcache"
pgrep memcached > /dev/null || memcached -s /tmp/mc.sock -d

# redis
pgrep redis-server> /dev/null || { md -p /usr/local/var/db/redis; redis-server /usr/local/etc/redis.conf &;}

# start mysql
